{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Current Project",
      "type": "shell",
      "command": "OF_ROOT=\"${workspaceFolder}/libs/openFrameworks\" make -C ${fileDirname} -j",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run Current Project",
      "type": "shell",
      "command": "OF_ROOT=\"${workspaceFolder}/libs/openFrameworks\" make -C ${fileDirname} RunRelease",
      "dependsOn": [
        "Build Current Project"
      ]
    },
    {
      "label": "Clean Current Project",
      "type": "shell",
      "command": "OF_ROOT=\"${workspaceFolder}/libs/openFrameworks\" make -C ${fileDirname} clean"
    }
  ]
}